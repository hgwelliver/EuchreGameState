<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Euchre.EuchreMainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:id="@+id/buttonAndMiddleCardLayout"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/scorelayout"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:orientation="horizontal"
                android:translationX="930dp">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:translationX="100dp">

                    <TextView
                        android:id="@+id/blueTricks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="right"
                        android:text="Blue Trick Score: 0"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/blueScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="right"
                        android:text="Blue Team Score: 0"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/redTricks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="right"
                        android:text="Red Trick Score: 0"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/redScore"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:fontFamily="sans-serif-smallcaps"
                        android:gravity="right"
                        android:text="Red Team Score: 0"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_dark"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/helpMenuButton"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Help Menu"
                        android:textSize="16sp"
                        android:translationX="100dp"
                        android:translationY="20dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttonLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:translationX="-300dp">

                <TextView
                    android:id="@+id/selectTrumpButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Select Trump"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_dark"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:translationY="10dp">

                    <Button
                        android:id="@+id/spadeButton"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/spades" />

                    <Button
                        android:id="@+id/heartButton"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_x="25dp"
                        android:layout_y="25dp"
                        android:background="@drawable/hearts" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:translationY="10dp">

                    <Button
                        android:id="@+id/diamondButton"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_x="25dp"
                        android:layout_y="25dp"
                        android:background="@drawable/diamonds" />

                    <Button
                        android:id="@+id/clubButton"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:layout_x="25dp"
                        android:layout_y="25dp"
                        android:background="@drawable/clubs" />

                </LinearLayout>

                <Button
                    android:id="@+id/passButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Pass"
                    android:textSize="16sp"
                    android:translationY="20dp" />

                <Button
                    android:id="@+id/pickItUpButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Pick It Up"
                    android:textSize="16sp"
                    android:translationY="20dp" />

                <Button
                    android:id="@+id/orderUpButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Order Up"
                    android:textSize="16sp"
                    android:translationY="20dp" />

                <Button
                    android:id="@+id/aloneButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Going Alone"
                    android:textSize="16sp"
                    android:translationY="20dp" />

                <Button
                    android:id="@+id/quitButton"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:text="Quit"
                    android:textSize="16sp"
                    android:translationY="20dp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/middleCardRows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:translationX="-300dp">

                <LinearLayout
                    android:id="@+id/middleCardTopRow"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/topplayer"
                        android:layout_width="75dp"
                        android:layout_height="150dp"
                        android:adjustViewBounds="true"
                        android:background="@android:color/holo_red_dark"
                        android:translationX="500dp"
                        app:srcCompat="@drawable/cardback" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/middleCardMiddleRow"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/leftplayer"
                        android:layout_width="75dp"
                        android:layout_height="150dp"
                        android:adjustViewBounds="true"
                        android:background="@android:color/holo_blue_light"
                        android:translationX="400dp"
                        app:srcCompat="@drawable/cardback" />

                    <ImageView
                        android:id="@+id/kitty"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:translationX="152dp"
                        app:srcCompat="@drawable/cardback" />

                    <ImageView
                        android:id="@+id/rightplayer"
                        android:layout_width="75dp"
                        android:layout_height="150dp"
                        android:adjustViewBounds="true"
                        android:background="@android:color/holo_blue_light"
                        android:translationX="-100dp"
                        app:srcCompat="@drawable/cardback" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/middleCardBottomRow"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/player"
                        android:layout_width="75dp"
                        android:layout_height="150dp"
                        android:adjustViewBounds="true"
                        android:background="@android:color/holo_red_dark"
                        android:translationX="500dp"
                        app:srcCompat="@drawable/cardback" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/playerCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationX="390dp">

            <RelativeLayout
                android:id="@+id/cardLinearLayout"
                android:layout_width="700dp"
                android:layout_height="150dp"
                android:layout_gravity="bottom|right"
                android:layout_x="500dp"
                android:layout_y="500dp"
                android:gravity="right"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/playerhand5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/playerhand4"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:layout_toRightOf="@id/playerhand4"
                    android:adjustViewBounds="true"
                    android:translationX="10dp"
                    app:srcCompat="@drawable/cardback" />

                <ImageView
                    android:id="@+id/playerhand4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/playerhand3"
                    android:layout_gravity="right"
                    android:layout_marginLeft="20dp"
                    android:adjustViewBounds="true"
                    android:translationX="-110dp"
                    app:srcCompat="@drawable/cardback" />

                <ImageView
                    android:id="@+id/playerhand3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:layout_toRightOf="@id/playerhand2"
                    android:adjustViewBounds="true"
                    android:translationX="-230dp"
                    app:srcCompat="@drawable/cardback" />

                <ImageView
                    android:id="@+id/playerhand2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_toRightOf="@id/playerhand1"
                    android:adjustViewBounds="true"
                    android:translationX="-100dp"
                    app:srcCompat="@drawable/cardback" />

                <ImageView
                    android:id="@+id/playerhand1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/cardback" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>